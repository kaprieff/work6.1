{
    "name": "work6/chocolate-snack-library",
    "description": "Библиотека вкусняшек",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "work6\\ChocolateSnack\\": "src/"
        }
    },
    "require": {
        "php": "^8.1"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "phpstan": "phpstan analyse src --level=8",
        "phpcs": "phpcs src --standard=PSR12",
        "fix": "phpcbf src --standard=PSR12"
    }
}